{
  "manifest_version": 3,
  
  "name": "Frame Refresh",
  "description": "This extension will refresh the page in every 1 minutes",
  "version": "1.0",
  "icons": {
    "128": "icon-128.png"
  },
  "author": "Avinash",
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_icon": "icon-19.png",
    "default_title": "Frame Refresh"
  },
  
  "commands": {
    "refresh-active-frame": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Command+MacCtrl+R"
      },
      "description": "Frame Refresh"
    }
  },
  
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
